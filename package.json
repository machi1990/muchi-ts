{
  "name": "muchi-ts",
  "version": "2.0.1",
  "description": "Annotation based test runner for JavaScript and TypeScript, written in TypeScript.",
  "main": "index.js",
  "bin": {
    "muchi": "./bin/muchi.js"
  },
  "scripts": {
    "prebuild": "tsc",
    "build": "ncc build build/api/main.js -m -o build",
    "postbuild": "mv build/index.js .",
    "pretest": "yarn build",
    "test": "node bin/muchi.test.js test/*.test.ts",
    "test:only": "node bin/muchi.test.js test/*.test.ts",
    "precommit": "yarn build && lint-staged"
  },
  "lint-staged": {
    "*.ts": [
      "pretty-quick",
      "git add ."
    ],
    "bin/**/*.js": [
      "pretty-quick",
      "git add ."
    ]
  },
  "devDependencies": {
    "@zeit/ncc": "0.15.2",
    "husky": "0.14.3",
    "lint-staged": "7.3.0",
    "prettier": "1.14.2",
    "pretty-quick": "1.6.0"
  },
  "dependencies": {
    "@types/muchi-ts": "https://github.com/machi1990/muchi-ts-types.git",
    "@types/node": "10.10.2",
    "assert": "1.4.1",
    "colors": "1.3.2",
    "commander": "2.19.0",
    "js-dada": "2.0.0",
    "reflect-metadata": "0.1.12",
    "source-map-support": "0.5.9",
    "typescript": "3.3.3333"
  },
  "license": "MIT",
  "author": {
    "email": "manyanda.chitimbo@gmail.com",
    "name": "Manyanda Chitimbo"
  },
  "repository": {
    "type": "git",
    "url": "https://chitson1990@bitbucket.org/chitson1990/muchi-ts.git"
  },
  "keywords": [
    "test",
    "test-runner",
    "typescript"
  ]
}
