{
  "name": "muchi-ts",
  "version": "4.0.0",
  "description": "Annotation based test runner for JavaScript and TypeScript, written in TypeScript.",
  "main": "index.js",
  "bin": {
    "muchi": "./bin/muchi.js"
  },
  "scripts": {
    "prebuild": "tsc",
    "build": "ncc build dist/main.js -S -o .",
    "start": "node bin/muchi.test.js test/.*.test.ts",
    "test": "node bin/muchi.test.js test/test-double.test.ts",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.[tj]s": [
      "pretty-quick",
      "git add ."
    ]
  },
  "devDependencies": {
    "@zeit/ncc": "0.4.1",
    "husky": "0.14.3",
    "lint-staged": "7.3.0",
    "prettier": "1.14.2",
    "pretty-quick": "1.6.0"
  },
  "dependencies": {
    "@types/muchi-ts": "https://github.com/machi1990/muchi-ts-types.git",
    "@types/node": "10.10.2",
    "assert": "1.4.1",
    "colors": "1.3.2",
    "commander": "2.19.0",
    "dada-js": "https://github.com/machi1990/dada-js.git",
    "reflect-metadata": "0.1.12",
    "source-map-support": "0.5.9",
    "typescript": "3.1.3"
  },
  "license": "MIT",
  "author": {
    "email": "manyanda.chitimbo@gmail.com",
    "name": "Manyanda Chitimbo"
  },
  "repository": {
    "type": "git",
    "url": "https://chitson1990@bitbucket.org/chitson1990/muchi-ts.git"
  }
}
