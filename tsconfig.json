{
  "compilerOptions": {
    "target": "es5",
    "types": ["@types/node", "@types/muchi-ts"],
    "lib": ["es6", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "build",
    "allowJs": true,
    "checkJs": false
  },
  "exclude": ["node_modules", "build", "test", "bin", "dada-js", "*.js"]
}
